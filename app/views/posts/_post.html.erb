<div id="<%= dom_id post %>" class="border-slate-500 border-2 p-4">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <div class="flex gap-2">
    <%= button_to "Edit this post", edit_post_path(post) %>
    <%= button_to "Destroy this post", post, method: :delete %>
  </div>
</div>
